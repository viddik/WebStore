@model WebStore.Domain.ViewModel.EmployeeView
@{
    ViewData["title"] = "Карточка сотрудника";
    Layout = "_Layout";
}

<h2>@ViewData["Title"]</h2>
<table class="table table-bordered">
    <tr>
        <td>Id</td>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <td>Фамилия</td>
        <td>@Model.SurName</td>
    </tr>
    <tr>
        <td>Имя</td>
        <td>@Model.FirstName</td>
    </tr>

    <tr>
        <td>Отчество</td>
        <td>@Model.Patronymic</td>
    </tr>
    <tr>
        <td>Возраст</td>
        <td>@Model.Age</td>
    </tr>
    <tr>
        <td>Дата принятия на работу</td>
        <td>@Model.EmploymentDate.ToShortDateString()</td>
    </tr>
</table>
    
<hr />
@Html.ActionLink("К списку сотрудников", "Index")

