@using WebStore.Domain.ViewModel.Product
@model CatalogViewModel
@{
    ViewData["Title"] = "Shop";
}
@{
    Layout = "_LayoutBreadcrumbs";
}

@await Html.PartialAsync("Partial/_Advertisement")

<section>
    <div class="row">
        <div class="col-sm-3">
            @await Html.PartialAsync("Partial/_LeftSideBar")
        </div>
        <div class="col-sm-9 padding-right">
            @await Html.PartialAsync("Partial/_ProductItems", Model.ProductsViewModel)
            <paging page-model="Model.ProductsViewModel.PageViewModel" page-action="Shop"
                    page-url-sectionId="@Model.SectionId"
                    page-url-brandId="@Model.BrandId">
            </paging>
        </div>
    </div>
</section>