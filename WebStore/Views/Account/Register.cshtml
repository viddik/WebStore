@model WebStore.Domain.ViewModel.Account.RegisterUserViewModel
@{
    ViewData["Title"] = "Регистрация";
}
<section id="form">
    <!--form-->
    <div class="row">
        <div class="col-sm-4 col-sm-offset-1">
            <div class="signup-form">
                <!--sign up form-->
                <h2>Регистрация пользователя</h2>
                <form asp-action="Register" asp-antiforgery="true">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="UserName" 
                           placeholder="@ViewData.ModelMetadata.Properties.FirstOrDefault(x => x.PropertyName == nameof(Model.UserName))?.DisplayName" />
                    <span asp-validation-for="UserName" class="text-danger"></span>

                    <input asp-for="Email" placeholder="@nameof(Model.Email)" />
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <input asp-for="Password" 
                           placeholder="@ViewData.ModelMetadata.Properties.FirstOrDefault(x => x.PropertyName == nameof(Model.Password))?.DisplayName" />
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <input asp-for="ConfirmPassword" 
                           placeholder="@ViewData.ModelMetadata.Properties.FirstOrDefault(x => x.PropertyName == nameof(Model.ConfirmPassword))?.DisplayName" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    <button type="submit" class="btn btn-default">Зарегистрироваться</button>
                </form>
            </div><!--/sign up form-->
        </div>
    </div>
</section>
